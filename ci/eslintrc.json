{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "extends": "standard-with-typescript",

  "overrides": [],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "double", {
      "avoidEscape": true
    }],
    "semi": ["error", "always"],
    "semi-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "asyncArrow": "always",
      "named": "never"
    }]
  }
}
