contem(text: Texto) = (word: Texto) => word - text == ""

sub(list: Lista[Texto]): Lista[Lista[Texto]] = se list == [] entao [] senao list::sub(list.cauda) fim

anagrams(input: Texto, words, list: Lista[Texto]): Nada = escolha input
  caso "" => escreva list.junte(" ")
  caso _  => para ws em sub(words), in em [input - ws.cabeca] faca anagrams(in, ws.cauda.selecione(contem(in)), ws.cabeca::list) fim
